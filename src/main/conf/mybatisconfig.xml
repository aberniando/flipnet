<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="org.postgresql.Driver"/>
<!--                <property name="url" value="http://127.0.0.1:55757/?key=8f7e3ca5-ecbb-4e53-8515-3bda7ada285e"/>-->
                <property name="url" value="jdbc:postgresql://db:5432/compose-postgres"/>
                <property name="username" value="compose-postgres"/>
                <property name="password" value="compose-postgres"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="flipnet-mapper.xml"/>
        <mapper resource="appconfig-mapper.xml"/>
    </mappers>
</configuration>